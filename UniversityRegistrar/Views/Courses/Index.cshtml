@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<div class="card">
  <h1>Courses</h1>
  <hr />

  <div class="row">
    @if (@Model.Count == 0)

    {
      <h3>There are no courses yet. </h3>
    }

    @foreach (Course course in Model)
    {
      <div class="col">@Html.ActionLink($"{course.CourseName}", "Details", new { id = course.CourseId })</div>
    }
  </div>
</div>
<br />
<button type="button" class="btn btn-outline-dark btn-lg">@Html.ActionLink("Add new course", "Create")</button>
